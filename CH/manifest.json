{
    "manifest_version": 3,
    "name": "Time Popup Extension",
    "version": "1.0",
    "description": "Popup at a specific time",
    "permissions": ["storage", "alarms", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  